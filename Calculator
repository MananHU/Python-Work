from math import *

num1 = float(input('Enter A number:'))
op = input('Enter an operation:')
num2 = float(input('Enter Another number:'))

if op == '+':
    print('num1+num2')
elif op == '-':
    print(num1-num2)
elif op == 'x' or '*':
    print(num1*num2)
elif op == '/':
    print(num1/num2)
else:
    print('the operation you have choosen is not valid')
